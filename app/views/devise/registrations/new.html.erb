
<body style="background-color:#3f4f62;">
  <div id="main">
    <div class="container">
      <div class="row">
        <div class="col-sm-12">
          <div class="login">
            <h3 style="text-align:center;color:#428bca;margin-bottom:25px;">Regjistrohu</h3>
            <p style="text-align:center;margin-bottom:25px;">Duke klikuar Regjistrohu ju pajtoheni me kushtet tona dhe mund te qaseni ne aplikacionin per punesim. </p>
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <div class="form-group">
              <%= f.email_field :email, :class => "form-control", :placeholder => "Email" %>
            </div>

            <div class="form-group">
              <%= f.password_field :password, :class => "form-control", :placeholder => "Fjalekalimi - minimumi 8 karaktere" %>
            </div>

            <div class="form-group">
              <%= f.password_field :password_confirmation, :class => "form-control", :placeholder => "Konfirmo fjalekalimin" %>
            </div>

            <div class="form-group">
              <%= f.submit "Regjistrohu", class: "btn btn-default btn_login" %>
            </div>
            <div class="regjistro_1">
                <%= link_to "KyÃ§u!", new_session_path(resource_name), class: "regjistro_bottom_r" %>
            </div>
            <% end %>

          </div>
        </div>
      </div>
    </div>
  </div>
</body>